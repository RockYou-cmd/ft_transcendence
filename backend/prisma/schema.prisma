// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                            String   @id @default(uuid())
  username                      String   @unique
  email                         String   @unique
  password                      String?
  photo                         String?
  bio                           String?
  status                        UserStatus @default(ONLINE)
  is2faEnabled                  Boolean? @default(false)
  twoFactorAuthenticationSecret String?
  temp2fa                       String?
  friends                       FriendShip[]
  requestsSent                  FriendShip[] @relation(name: "requestsSent")
  blockedBy                     FriendShip[] @relation(name: "blockedBy")
  
  chats             Chat[]
  chatsMessages     Message[]

  rooms    RoomMembership[]
  rooomsMessages  RoomMessage[]

  gameProfile                   GameProfile?
}

model GameProfile {
  profileId       String @id @default(uuid())
  user            User @relation(fields: [userId], references: [username])
  userId          String @unique
  gamesPlayed     Int @default(0)
  level           Int @default(0)
  wins            Int @default(0)
  losses          Int @default(0)
  xp              Int @default(0)
  games           GameParticipation[]
}


model GameParticipation {
  game       Game   @relation(fields: [gameId], references: [id])
  gameId     Int
  profile    GameProfile   @relation(fields: [userId], references: [profileId])
  userId     String
  score      Int

  @@id([gameId, userId])
}

model Game {
  id            Int                 @id @default(autoincrement())
  participants  GameParticipation[]
}

model Room {
  id        String      @id @default(uuid())
  name      String
  photo	 	String?
  description String?
  privacy   RoomPrivacy @default(PUBLIC)
  password  String?
  members   RoomMembership[]
  messages  RoomMessage[]
  createdAt DateTime    @default(now())
}

model RoomMembership {
  id       Int        @id @default(autoincrement())
  user     User       @relation(fields: [userId], references: [username])
  userId   String
  room     Room       @relation(fields: [roomId], references: [id])
  roomId   String
  role     RoomRole @default(MEMBER)
  status   RoomStatus @default(ANGEL)
  mutedTime DateTime?


  @@unique([userId, roomId])
}

model RoomMessage {
  id        String     @id @default(uuid())
  content   String
  createdAt DateTime   @default(now())
  room      Room       @relation(fields: [roomId], references: [id])
  roomId    String
  sender    User       @relation(fields: [senderId], references: [username])
  senderId  String
}



model Chat {
  id        String    @id @default(uuid())
  messages  Message[]
  members   User[]
}

model Message {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id])
  chatId    String
  sender    User     @relation(fields: [senderId], references: [username])
  senderId  String
}

model FriendShip {
  id        Int @id @default(autoincrement())
  users      User[]
  userId    String?
  status    Status @default(PENDING)
  sender   User?   @relation(name: "requestsSent",fields: [senderId], references: [id])
  senderId String?
  blocked  User?   @relation(name: "blockedBy", fields: [blockedId], references: [id])
  blockedId String?
  @@unique([userId, senderId])
}



enum RoomRole {
  MEMBER
  ADMIN
  OWNER
}

enum RoomStatus {
  MUTED
  BANNED
  ANGEL
}

enum RoomPrivacy {
  PUBLIC
  PRIVATE
  PROTECTED
}

enum Status {
  PENDING
  ACCEPTED
  BLOCKED
}

enum UserStatus {
  ONLINE
  OFFLINE
  INGAME
}